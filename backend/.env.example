# Backend Environment Variables
NODE_ENV="development"
PORT="5000"
HOST="localhost"
API_PREFIX="/api"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/agarwal_sabha_db"
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-token-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
BCRYPT_ROUNDS="12"
CORS_ORIGIN="http://localhost:3000"

# Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@agarwalsabha.com"
SENDGRID_FROM_NAME="Agarwal Sabha Platform"

# SMS Service
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# File Storage
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Payment Gateway
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_SMS_VERIFICATION="false"
ENABLE_MATRIMONIAL="true"
ENABLE_BUSINESS_DIRECTORY="true"
ENABLE_HALL_BOOKING="true"
ENABLE_PAYMENTS="true"
MAINTENANCE_MODE="false"
